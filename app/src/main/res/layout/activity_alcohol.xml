<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:background="@drawable/cheers"

    tools:context=".Activites.Alcohol_Activity">



    <LinearLayout
        android:layout_marginTop="62dp"
        android:layoutDirection="ltr"
        android:padding="15dp"
        android:id="@+id/AA_sideMenulayout"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">





        <Button
            style="@style/btn_style"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="בירות"
            android:textSize="32dp"
            android:tag="0"
            android:id="@+id/AA_beer"
            android:onClick="onCATAGORYclick" />

        <Button
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="בירות מהחבית"
            android:textSize="32dp"
            android:tag="1"
            android:id="@+id/AA_draftbeers"
            android:onClick="onCATAGORYclick" />

        <Button
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="יינות"
            android:textSize="32dp"
            android:tag="2"
            android:id="@+id/AA_wine"
            android:onClick="onCATAGORYclick" />

        <Button
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="וודקה"
            android:textSize="32dp"
            android:tag="3"
            android:id="@+id/AA_vodka"
            android:onClick="onCATAGORYclick" />
        <Button
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="וויסקי"
            android:textSize="32dp"
            android:tag="4"
            android:id="@+id/AA_scotch"
            android:onClick="onCATAGORYclick" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            />



    </LinearLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:padding="20dp"

        android:id="@+id/AA_leftsideMenulayout">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="תפריט אלכוהול"
            android:textSize="45dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/AC_header"
            android:shadowColor="#ff5000"
            android:shadowRadius="7"/>

        <ListView
            android:dividerHeight="7.0sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/AA_listView"
            android:layout_below="@id/AC_header"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"></ListView>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/manager"
            android:onClick="onAddBtn"
            android:id="@+id/addBTN"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/AA_listView"
            android:layout_alignStart="@+id/AA_listView" />

    </RelativeLayout>

</LinearLayout>
