<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bgbb"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layoutDirection="ltr"
    tools:context=".Activites.MainActivity">



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical"
        android:id="@+id/MA_relative_layout"
        android:background="@drawable/corner_radius"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <Button
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:gravity="center_horizontal"
            android:id="@+id/AC_icon"
            android:layout_gravity="center"
            android:background="@drawable/logo"

            />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/manager"
            android:visibility="invisible"
            android:id="@+id/MA_btn_manager"
            android:onClick="manager_area_active"/>







    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/activity_main_list_container"></FrameLayout>




</LinearLayout>
