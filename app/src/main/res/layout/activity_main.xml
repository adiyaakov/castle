    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical"
        android:id="@+id/MA_relative_layout"
        android:background="@drawable/side_bar_bg">

        <Button
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:gravity="center_horizontal"
            android:id="@+id/AC_icon"
            android:layout_gravity="center"
            android:background="@drawable/logo"

            />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/manager"

            android:id="@+id/MA_btn_manager"
            android:onClick="manager_area_active"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:textColor="#0b0a0a"
            android:text="123"
            android:id="@+id/MA_password_editText"
            android:layout_below="@+id/AC_icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="98dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="manager login"
            android:id="@+id/MA_loginBTN"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/home"
            android:id="@+id/home_btn"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:onClick="homeClicked"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/like_btn"
            android:id="@+id/face_btn"
            android:layout_marginTop="90dp"


            />


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/activity_main_list_container"></FrameLayout>

