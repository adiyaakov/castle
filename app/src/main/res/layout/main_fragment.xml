<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main_fragment_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fa24">


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TextView

         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="תפריט"
         android:textStyle="bold"
         android:textColor="#FFFFFF"
         android:id="@+id/main_fragment_header"
         android:gravity="center_horizontal"
         android:textSize="40dp"
         />


    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="start"

        android:id="@+id/main_fragment_manager_btn"
        android:background="@drawable/manager"
        />

    </RelativeLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:padding="20dp"
        android:layout_weight="1"
        android:dividerHeight="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_fragment_listview"
        ></ListView>

</LinearLayout>



</LinearLayout>